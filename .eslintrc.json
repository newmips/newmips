{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-else-return": "warn",
        "no-multiple-empty-lines": "warn",
        "no-trailing-spaces": "warn",
        "prefer-const": "warn",
        "no-empty": "error",
        "no-extra-semi": "error",
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_{1}" }],
        "no-var": 2,
        "vars-on-top": "warn",
        "indent": ["error", "tab", {"SwitchCase": 1}]
	}
}