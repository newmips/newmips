extends ../../main_layout
block custom_css
	// DataTable
	link(href='/css/Datatables/dataTables.bootstrap.css', rel='stylesheet', type='text/css')
block header
	h1
		| #{__("module.application")}
		small #{__("module.module")}
	ol.breadcrumb
		li
			a(href='#')
				i.fa.fa-home
				| #{__("module.home")}
		li.active #{__("module.application")}
block content
	legend #{__("operation.list")} #{__("entity.data_field.plural")}
	.row
		.col-xs-12.connectedSortable
			.box-body.table-responsive
				table#list-data-field.table.table-bordered.table-striped
					thead
						tr
							th #{__("entity.data_field.id")} #{__("entity.data_field.name")}
							th #{__("entity.data_field.name")}
							th #{__("entity.data_field.type")}
							th #{__("entity.data_entity.label")}
					tbody
						each data_field in data_fields
							tr
								td #{data_field.id}
								td #{data_field.name}
								td #{data_field.type}
								td #{data_field.DataEntity.name}
block custom_js
	// DataTables Script
	script(src='/js/plugins/datatables/jquery.dataTables.js', type='text/javascript')
	script(src='/js/plugins/datatables/dataTables.bootstrap.js', type='text/javascript')
	script(type='text/javascript').
		$('#list-data-field').dataTable().fnDestroy();
		$('#list-data-field').dataTable({
		"bPaginate": true,
		"bLengthChange": true,
		"bFilter": true,
		"bSort": true,
		"bInfo": true,
		"bAutoWidth": true,
		"bRetrieve": true,
		"oLanguage": { "sUrl": "/js/UI/jquery-datatables_#{__("app.lang")}.js" }
		});
