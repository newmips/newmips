					.col-xs-12.col-sm-10
						#ui_editor
						button#ui_editor_save.btn.btn-primary(style="display:none;")
							| #{__("button.save")}

			#editor.tab-pane.fade.in
				.row
					#codemirror-menu.col-xs-12.col-sm-2.sidebar
