			$(document).on("keydown", "input#instruction", function(e){
				if(instructionHistory != null){
					/* UP ARROW */
					if (e.ctrlKey) {
						if(e.which == "38"){
							$("input#instruction").css("color", "rgba(255,255,255,0)");
