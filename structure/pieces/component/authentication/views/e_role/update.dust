{>"layout_MODULE_NAME"/}
{<header}
    <h1>{@__ key="module.home"/}<small>{@__ key="module.module"/}</small></h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i>{@__ key="module.home"/}</a></li>
        <li class="active">{@__ key="module.home"/}</li>
    </ol>
{/header}
{<content}
    <legend>{@__ key="operation.update"/} {@__ key="entity.e_role.name_entity"/}</legend>
    <div class="row">
        <div class="col-xs-12 connectedSortable">
            <form action="/role/update" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label for="id">{@__ key="entity.e_role.id_entity"/} {@__ key="entity.e_role.name_entity"/}</label>
                        <input name="id" type="hidden" placeholder="{e_role.id_entity}" value="{e_role.id}" class="form-control input"/>
                        <input name="id_display" type="text" placeholder="{e_role.id_entity}" value="{e_role.id}" disabled="" class="form-control input"/>
                    </div>
                    {#e_role}
                        {>"e_role/update_fields"/}
                    {/e_role}
                    <div class="form-group">
                        <input name="version" value="{e_role.version}" type="hidden" placeholder="version" class="form-control input"/>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">{@__ key="button.save"/}</button>
                </div>
                {#associationFlag}
                    <input type="hidden" name='associationFlag' value="{.}">
                {/associationFlag}
                {#associationSource}
                    <input type="hidden" name='associationSource' value="{.}">
                {/associationSource}
                {#associationForeignKey}
                    <input type="hidden" name='associationForeignKey' value="{.}">
                {/associationForeignKey}
                {#associationAlias}
                    <input type="hidden" name='associationAlias' value="{.}">
                {/associationAlias}
                {#associationUrl}
                    <input type="hidden" name='associationUrl' value="{.}">
                {/associationUrl}
            </form>
        </div>
    </div>
{/content}