<html>
<head>

</head>
<body style="margin: 20px 20px 20px 20px;font-size: 11px !important;">
	<div class="row">
		<div class="col-xs-12">
			<h4>Date : {cra.f_month}/{cra.f_year}</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<table class="table table-striped" style="max-width: 200px !important;">
				<thead>
					<tr>
						<td>Activities</td>
						{#daysAndLabels}
							<td>{f_day}<br>{f_date}</td>
						{/daysAndLabels}
					</tr>
				</thead>
				<tbody>
					{#activities}
						<tr>
							<td>{f_name}</td>
							{#filledTasks}
								<td>{f_duration}</td>
							{/filledTasks}
						</tr>
					{/activities}
					<tr>
						<td colspan="100">Total : {workedDays}/{cra.f_open_days_in_month}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="form-group">
				<label>Notification</label>
				<textarea class="form-control">{f_notification_admin}</textarea>
			</div>
		</div>
	</div>
</body>
</html>