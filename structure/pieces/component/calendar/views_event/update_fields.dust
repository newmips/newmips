<div id="fields">
    <div data-field="f_title" class="form-group">
        <label for="f_title"> {@__ key="component.CODE_NAME_LOWER.f_title"/} </label>
        <input class="form-control input" placeholder='{@__ key="component.CODE_NAME_LOWER.f_title" /}' name="f_title" value="{f_title}" type="text">
    </div>
    <div data-field="f_description" class="form-group">
        <label for="f_description"> {@__ key="component.CODE_NAME_LOWER.f_description"/} </label>
        <textarea class="form-control textarea" placeholder='{@__ key="component.CODE_NAME_LOWER.f_description" /}' name="f_description" id="f_description_textareaid" value="{f_description}" type="text">{f_description}</textarea>
    </div>
    <div data-field="f_place" class="form-group">
        <label for="f_place"> {@__ key="component.CODE_NAME_LOWER.f_place"/} </label>
        <input class="form-control input" placeholder='{@__ key="component.CODE_NAME_LOWER.f_place" /}' name="f_place" value="{f_place}" type="text">
    </div>
    <div data-field="f_datedebut" class="form-group">
        <label for="f_datedebut"> {@__ key="component.CODE_NAME_LOWER.f_datedebut"/} </label>
        <div class="input-group">
            <div class="input-group-addon">
                <i class="fa fa-calendar"></i> + <i class="fa fa-clock-o"></i>
            </div>
            <input class="form-control input datetimepicker datetimepicker-toconvert" placeholder='{@__ key="component.CODE_NAME_LOWER.f_datedebut" /}' name="f_datedebut" value="{f_datedebut}" type="text">
        </div>
    </div>
    <div data-field="f_datefin" class="form-group">
        <label for="f_datefin"> {@__ key="component.CODE_NAME_LOWER.f_datefin"/} </label>
        <div class="input-group">
            <div class="input-group-addon">
                <i class="fa fa-calendar"></i> + <i class="fa fa-clock-o"></i>
            </div>
            <input class="form-control input datetimepicker datetimepicker-toconvert" placeholder='{@__ key="component.CODE_NAME_LOWER.f_datefin" /}' name="f_datefin" value="{f_datefin}" type="text">
        </div>
    </div>
    <div data-field="f_allday" class="form-group">
        <label for="f_allday"> {@__ key="component.CODE_NAME_LOWER.f_allday"/} </label> &nbsp;
        <br> {#f_allday} <input class="form-control input" name="f_allday" value="{f_allday}" type="checkbox" checked=""> {:else} <input class="form-control input" name="f_allday" value="{f_allday}" type="checkbox"> {/f_allday}
    </div>
    <div id="selectCategory" data-field="f_category" class="form-group">
        <label for="f_category">{@__ key="component.CODE_NAME_LOWER.r_category" /}</label>
        <select style="width:100%;" class="form-control" name="RELATION_CATEGORY_LOWER">
            <option data-backgroundcolor="#CCCCCC" value="">{@__ key="global_component.calendar.no_category"/}</option>
            {#RELATION_CATEGORY_LOWER_global_list}
                {#.f_label}
                    {@eq key=RELATION_CATEGORY_LOWER.id value=id}
                        <option data-backgroundcolor="{f_color}" value="{id}" selected="">{f_label}</option>
                    {:else}
                    <option data-backgroundcolor="{f_color}" value="{id}">{f_label}</option>
                    {/eq}
                {:else}
                    {@eq key=RELATION_CATEGORY_LOWER.id value=id}
                        <option data-backgroundcolor="{f_color}" value="{id}" selected="">{id} - label not defined</option>
                    {:else}
                        <option data-backgroundcolor="{f_color}" value="{id}">{id} - label not defined</option>
                    {/eq}
                {/.f_label}
            {/RELATION_CATEGORY_LOWER_global_list}
        </select>
    </div>
</div>